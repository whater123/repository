<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.mybatis.dao.NoticeMapper">
    <select id="getNoticeById" resultType="notice">
        select * from manager_notice where id= #{id}
    </select>

    <select id="getLatestNotice" resultType="notice">
        select * from manager_notice order by date desc limit 1
    </select>
    
    <select id="getAll" resultType="notice">
        select * from manager_notice 
    </select>
    
    <insert id="addNotice" useGeneratedKeys="true" keyProperty="id">
        insert into manager_notice (title,date,context) values (#{title},#{date},#{context})
    </insert>

    <update id="updateNotice">
        update manager_notice
        <set>
            <if test="title!=null &amp;&amp; title!=&quot;&quot;">
                title = #{title},
            </if>
            <if test="context!=null &amp;&amp; context!=&quot;&quot;">
                context = #{context},
            </if>
            date = #{date}
        </set>
        where id = #{id}
    </update>

    <delete id="deleteNotice">
        delete from manager_notice where id = #{id}
    </delete>

</mapper>